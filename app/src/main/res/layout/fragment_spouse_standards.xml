<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="择偶标准"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="择偶标准"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_color" />

            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_height"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="身高" />

                <TextView
                    android:id="@+id/tv_height"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_income"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="年收入" />

                <TextView
                    android:id="@+id/tv_income"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_work_city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="工作生活地" />

                <TextView
                    android:id="@+id/tv_work_city"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_census"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="户籍" />

                <TextView
                    android:id="@+id/tv_census"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_marryinfo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="婚姻状况" />

                <TextView
                    android:id="@+id/tv_marryinfo"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_believe"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="信仰" />

                <TextView
                    android:id="@+id/tv_believe"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_wine"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="饮酒" />

                <TextView
                    android:id="@+id/tv_wine"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_smoke"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="吸烟" />

                <TextView
                    android:id="@+id/tv_smoke"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_ischild"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="有无子女" />

                <TextView
                    android:id="@+id/tv_ischild"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="体重" />

                <TextView
                    android:id="@+id/tv_weight"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_constellation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="星座" />

                <TextView
                    android:id="@+id/tv_constellation"
                    style="@style/text_style_black"
                    android:layout_marginRight="15dp"
                    android:text="不限" />

            </LinearLayout>

            <TextView
                style="@style/imaginary_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>