<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/imaginary_line"

        android:layout_marginLeft="85dp"
        android:layout_marginRight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_month"
            style="@style/text_style_black"
            android:text="11月"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_day"
            style="@style/text_style_black"
            android:layout_marginLeft="3dp"
            android:text="07日"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/text_style_black"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_content"
                style="@style/text_style_black"
                android:textColor="@color/gray"
                android:text="content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_pic"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/check_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:button="@drawable/check_like"
                    android:gravity="center_vertical"
                    android:padding="7dp"
                    android:text="点赞"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_private_comment"
                    style="@style/text_style_gray"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/dong_pinglun"
                    android:drawablePadding="7dp"
                    android:layout_marginLeft="5dp"
                    android:text="私密评论"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_more_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@mipmap/dong_gengduo" />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_arename"
                    style="@style/text_style_gray"
                    android:drawableLeft="@mipmap/dong_weizhi"
                    android:drawablePadding="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:text="sit" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>