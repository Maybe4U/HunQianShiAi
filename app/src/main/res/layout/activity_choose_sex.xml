<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zykj.hunqianshiai.login_register.goago.ChooseSexActivity">

    <include layout="@layout/view_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/nvsheng" />

        <TextView
            style="@style/text_style_gray"
            android:layout_below="@+id/iv_women"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="女" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/nansheng" />

        <TextView
            style="@style/text_style_gray"
            android:layout_below="@+id/iv_man"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="男" />
    </RelativeLayout>
</LinearLayout>
