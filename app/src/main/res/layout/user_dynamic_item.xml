<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_heard"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="15dp"
            android:src="@mipmap/fujin_fujin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/text_style_black"
                    android:text="@string/app_name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/text_style_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="1分钟之前"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/text_style_black"
                    android:text="30岁" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/shape_dot" />

                <TextView
                    android:id="@+id/tv_height"
                    style="@style/text_style_black"
                    android:text="177cm" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/shape_dot" />

                <TextView
                    android:id="@+id/tv_work_city"
                    style="@style/text_style_black"
                    android:text="工作地点：" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                style="@style/text_style_black"
                android:text="content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_pic"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/check_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:button="@drawable/check_like"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="点赞"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_private_comment"
                    style="@style/text_style_gray"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/dong_pinglun"
                    android:drawablePadding="10dp"
                    android:text="私密评论"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_more_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@mipmap/dong_gengduo" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_sit"
                android:layout_marginLeft="5dp"
                style="@style/text_style_gray"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/dong_weizhi"
                android:drawablePadding="10dp"
                android:text="sit"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/imaginary_line"
        android:layout_below="@+id/ll_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />
</RelativeLayout>