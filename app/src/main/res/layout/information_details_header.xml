<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_style_black"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            android:layout_height="40dp"
            android:src="@mipmap/fujin_fujin" />

        <TextView
            android:id="@+id/tv_"
            style="@style/text_style_black"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="name"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_style_gray"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="12-09  12:01"
            android:textSize="13sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_details_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@mipmap/dong_pinglun" />

        <CheckBox
            android:id="@+id/check_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:button="@drawable/check_like" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_content"
            style="@style/text_style_black"
            android:layout_margin="15dp"
            android:text="content" />

        <TextView
            android:id="@+id/tv_see"
            style="@style/text_style_gray"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_content"
            android:layout_margin="20dp"
            android:drawableLeft="@mipmap/zixun_shuliang"
            android:drawablePadding="5dp"
            android:text="999+" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="评论（999）"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!--<TextView-->
        <!--style="@style/imaginary_line"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp" />-->
</LinearLayout>