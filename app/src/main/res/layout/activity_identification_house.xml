<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.zykj.hunqianshiai.home.my.identifacation_house.IdentificationHouseActivity">

    <include layout="@layout/view_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            style="@style/text_style_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="购买情况"
            android:textColor="@color/default_color" />

        <TextView
            android:id="@+id/tv_select_buy"
            style="@style/text_style_gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jinru"
            android:padding="5dp"
            android:text="请选择" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/text_style_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="房产所在地"
                android:textColor="@color/default_color" />

            <TextView
                android:id="@+id/tv_car_trademark"
                style="@style/text_style_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/jinru"
                android:padding="5dp"
                android:text="请选择" />
        </RelativeLayout>

        <TextView
            style="@style/imaginary_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请描述您的房屋"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/text_style_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="上传房产证或购买合同"
                android:textColor="@color/default_color" />

        </RelativeLayout>

        <TextView
            style="@style/imaginary_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/fang_yangshi" />

                <TextView
                    style="@style/text_style_gray"
                    android:layout_marginTop="10dp"
                    android:text="房产证样式" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_house"
                    android:layout_width="140dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/che_shangchuan" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_style_black"
            android:text="备注："
            android:textSize="17sp" />

        <TextView
            style="@style/text_style_black"
            android:text="（通过多项认证，魅力值提升6倍）"
            android:textColor="@color/default_color" />
    </LinearLayout>

    <TextView
        style="@style/text_style_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:text=" 如果您有多套房产，可将房产证或购房合同等证明分别拍照上传；认证申请将于两个工作日之内完成审核！" />
</LinearLayout>
