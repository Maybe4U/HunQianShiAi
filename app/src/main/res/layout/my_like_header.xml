<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_headpic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/fujin_fujin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_head_username"
                    style="@style/text_style_black"
                    android:layout_centerVertical="true"
                    android:text="NAME  28岁" />

                <ImageView
                    android:id="@+id/iv_isvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_head_username"
                    android:src="@mipmap/huangguan" />

                <CheckBox
                    android:button="@drawable/selector_home_heartbeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:clickable="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_userauth"
                style="@style/text_style_gray"
                android:layout_marginTop="3dp"
                android:text="已认证个人身份-房-车"
                android:textColor="@color/default_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_areaname"
                    style="@style/text_style_gray"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:drawableLeft="@mipmap/fujin_weizhi"
                    android:drawablePadding="5dp"
                    android:text="工作生活在：山东-临沂的某个地方"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_yearmoney"
                    style="@style/text_style_gray"
                    android:drawableLeft="@mipmap/fujin_shouru"
                    android:drawablePadding="5dp"
                    android:text="100w-200w以上"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:textSize="13sp"
                style="@style/text_style_gray"
                android:text="9月0日" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_color"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/fujin_huiyuan"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:text="以下最近我心动的人只有会员才能查看"
            android:textColor="@color/default_color"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>