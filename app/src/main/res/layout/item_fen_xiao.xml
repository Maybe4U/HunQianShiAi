<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/fujin_fujin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/text_style_black"
                    android:layout_centerVertical="true"
                    android:text="NAME" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/text_style_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="" />

                <ImageView
                    android:id="@+id/iv_isvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_head_username"
                    android:src="@mipmap/huangguan"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_areaname"
                style="@style/text_style_gray"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/fujin_weizhi"
                android:drawablePadding="5dp"
                android:text="山东-临沂"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_style_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:drawablePadding="5dp"
                android:paddingBottom="5dp"
                android:text="山东-临沂"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/imaginary_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</LinearLayout>