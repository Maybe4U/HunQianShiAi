<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/shape_rounded_rectangle_gray_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    style="@style/text_style_black"
                    android:layout_marginTop="15dp"

                    android:text="TA 上 线 提 醒"
                    android:textSize="16sp" />

                <TextView
                    style="@style/text_style_black"
                    android:layout_marginTop="10dp"
                    android:text="@string/knone"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/huiyuan_kaifuwu" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_open"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="开通服务"
                android:textColor="@color/default_color"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/huiyuan_guanbi" />
    </RelativeLayout>
</RelativeLayout>